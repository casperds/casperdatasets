<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0">

	<info organisation="net.casper" module="casperdatasets-io" revision="2.1.1" status="release" publication="20120117122414">
		<license name="LGPL" url="http://www.gnu.org/licenses/lgpl.html"/>
		<description homepage="http://code.google.com/p/casperdatasets/">
			Casper datasets I/O modules for loading datasets to/from files
			and Java POJO beans.
		</description>
	</info>

	<configurations>
		<conf name="default" visibility="public" description="binary artifacts of this module and its dependencies"/>
		<conf name="sources" visibility="public" description="source artifacts of this module and its dependencies"/>
		<conf name="javadoc" visibility="public" description="javadoc artifacts of this module and its dependencies"/>
	</configurations>

	<publications>
		<artifact conf="default"/>
		<artifact name="casperdatasets-io-sources" type="source" conf="sources" ext="jar"/>
		<artifact name="casperdatasets-io-javadoc" type="javadoc" conf="javadoc" ext="jar"/>
	</publications>

	<dependencies>
		<dependency org="net.casper" name="casperdatasets" rev="2.0.1" revConstraint="latest.integration" conf="*->@"/>
		<dependency org="org.omancode" name="omcutil" rev="1.2.5" revConstraint="latest.integration" conf="*->@"/>
		<dependency org="org.omancode" name="readmytables" rev="1.2.0" revConstraint="latest.integration" conf="*->@"/>
		<dependency org="org.omancode" name="readmytablesfromfiles" rev="1.2.0" revConstraint="latest.integration" conf="*->@"/>
        <dependency org="commons-lang" name="commons-lang" rev="2.6" revConstraint="latest.integration" conf="*->@"/>
        <dependency org="commons-beanutils" name="commons-beanutils" rev="1.8.3" revConstraint="latest.integration" conf="*->@">
        	<exclude name="commons-collections"/>
        </dependency>
        <dependency org="net.sourceforge.supercsv" name="supercsv" rev="1.52" revConstraint="latest.integration"/>
        <dependency org="com.google.code.gson" name="gson" rev="2.1" revConstraint="latest.integration"/>
        
        <!-- exclude dependencies artifacts based on configuration -->
		<exclude type="source" ext="*" conf="master,javadoc"/>
		<exclude type="javadoc" ext="*" conf="master,sources"/>
		<exclude type="jar" ext="*" conf="sources,javadoc"/>
        
    </dependencies>
</ivy-module>
